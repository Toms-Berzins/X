{
  "name": "powder-coating-pro",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^16.18.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-helmet-async": "^1.0.1",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "framer-motion": "^10.0.0",
    "nodemailer": "^6.9.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.5",
    "zod": "^3.24.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "eject": "react-scripts eject",
    "server": "ts-node server/index.ts",
    "server:dev": "nodemon --exec ts-node server/index.ts",
    "dev": "concurrently \"npm run start\" \"npm run server:dev\"",
    "build:server": "tsc -p tsconfig.server.json",
    "start:prod": "node dist/server/production.js",
    "build:prod": "npm run build && npm run build:server",
    "prod": "NODE_ENV=production npm run build:prod && npm run start:prod",
    "prepare": "husky install",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cypress:run",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "A modern, responsive website for a powder coating business built with React, TypeScript, and Tailwind CSS.",
  "main": "tailwind.config.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "axe-core": "^4.10.2",
    "concurrently": "^8.0.0",
    "cypress": "^14.0.1",
    "cypress-axe": "^1.6.0",
    "http-proxy-middleware": "^2.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.4.2",
    "react-scripts": "^5.0.1",
    "start-server-and-test": "^2.0.10",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
